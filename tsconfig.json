{
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "allowJs": true,
    "checkJs": false,
    "jsx": "preserve",
    "declaration": true,
    "preserveConstEnums": true,
    "outDir": "dist/",
    "composite": false,
    "incremental": true,
    "strict": true,
    "alwaysStrict": true,
    "noErrorTruncation": true,
    "noImplicitAny": true,
    "inlineSourceMap": true,
    "moduleResolution": "node",
    "baseUrl": "src/",
    "paths": {
      "*": [
        "node_modules/*",
        "src/types/*"
      ]
    },
    "resolveJsonModule": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": false,
    "esModuleInterop": false
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.js",
    "src/**/*.jsx"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ],
  "ts-node": {
    "transpileOnly": true
  },
  "extends": "@tsconfig/node18"
}
